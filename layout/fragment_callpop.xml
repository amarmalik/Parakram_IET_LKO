<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:background="@drawable/shadow"
    android:layout_height="wrap_content"
    tools:context="com.example.amazingami.parakram.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#00000000"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibtn_robo"
                android:background="@drawable/roboimg"
                android:layout_margin="5dp"
                />

            <Button
                android:text="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:id="@+id/btncalll"
                android:background="@drawable/btncardshape"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnsms"
                android:background="@drawable/btncardshape"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/btncalll"
                android:layout_toStartOf="@+id/btncalll" />

        </RelativeLayout>

    </LinearLayout>

      </LinearLayout>
</RelativeLayout>
